
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h2 id="myClock" class="text-danger"></h2>
@section Scripts{
    <script>
        $(function () {
            setInterval(function () {
                $.ajax({
                    url: "/Ajax/GetServerTime",
                    type: "POST",
                    success: function (data) {
                        $("#myClock").html(data);
                    },
                    error: function (obj, xhr, err) {
                        console.log(err);
                        alert("Lỗi");
                    }
                });
            }, 1000);
            
        });
    </script>    
}
